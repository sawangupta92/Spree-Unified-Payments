<% unless flash[:error] %>
<div id="approved_notice" style="font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase; padding:20px; border:solid 1px #3333ff; background:#dedeff; color:#3333ff"> Transaction was completed successfully and your order has been processed. <br>
  <%= @notice %> </div>
<table width="100%" border="0" cellspacing="15" cellpadding="0">
  <tr>
    <td width="280" valign="top" style="color:#000; font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase;">Response :</td>
    <td align="left" valign="top" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#666;"><%= @card_transaction.response_description %></td>
  </tr>
  <tr>
    <td valign="top" style="color:#000; font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase;">Order Description:</td>
    <td align="left" valign="top" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#666;"><%= @card_transaction.order_description %></td>
  </tr>
  <tr>
    <td valign="top" style="color:#000; font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase;">Amount:</td>
    <td align="left" valign="top" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#666;"><%= number_to_currency(@card_transaction.amount) %></td>
  </tr>
  <tr>
    <td valign="top" style="color:#000; font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase;">Merchant Reference Number:</td>
    <td align="left" valign="top" style="font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#666;"><%= @card_transaction.payment_transaction_id %></td>
  </tr>
</table>
<div style=" display:block; padding:10px 0; font-family:Arial, Helvetica, sans-serif; font-size:14px; font-weight:bold;">View <a href="/orders/<%= @card_transaction.order.number %>" target="_parent" style="text-decoration:underline; color:#09F">Order Details</a></div>
<% else %>
<div id="approved_notice" style="color:#EC1B23; border:solid 1px #EC1B23; font-family:Georgia, 'Times New Roman', Times, serif; letter-spacing:2px; font-size:12px; text-transform:uppercase; text-align:center; padding:20px 0; background:#ffe0e0;"> Order was not processed. Please contact support team for any queries.</div>
<% end %>